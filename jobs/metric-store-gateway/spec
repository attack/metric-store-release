---
name: metric-store-gateway

templates:
  bpm.yml.erb: config/bpm.yml
  metric_store_ca.crt.erb: config/certs/metric_store_ca.crt
  metric_store.crt.erb: config/certs/metric_store.crt
  metric_store.key.erb: config/certs/metric_store.key
  metric_port.yml.erb: config/metric_port.yml
  proxy.crt.erb: config/certs/proxy.crt
  proxy.key.erb: config/certs/proxy.key

packages:
- metric-store-gateway

provides:
- name: metric-store-gateway
  type: metric-store-gateway
  properties:
  - gateway_addr

consumes:
- name: metric-store
  type: metric-store

properties:
  gateway_addr:
    description: "The address for the metric-store-gateway to listen on"
    default: "localhost:8081"
  health_port:
    description: "The port for the metric-store-gateway to bind a health endpoint"
    default: 6063
  proxy_cert:
    description: "The TLS cert for the proxy"
  proxy_key:
    description: "The TLS key for the proxy"
